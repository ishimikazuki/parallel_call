APP_NAME=ParallelDialer
DEBUG=false

DATABASE_URL=postgresql+asyncpg://parallel_dialer:dev_password@localhost:5432/parallel_dialer
REDIS_URL=redis://localhost:6379

# JSON array. Use CORS_ORIGIN_REGEX for flexible localhost ports in dev.
CORS_ORIGINS=[]
CORS_ORIGIN_REGEX=^http://localhost:\\d+$

# Public base URL for webhook signature validation (e.g., https://xxxx.ngrok-free.app)
PUBLIC_BASE_URL=

# JWT
SECRET_KEY=dev-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_USE_MOCK=true
TWILIO_API_KEY_SID=
TWILIO_API_KEY_SECRET=
TWILIO_APP_SID=
TWILIO_VALIDATE_SIGNATURE=false
